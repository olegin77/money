# ==================================
# FINTRACK PRO - ENVIRONMENT VARIABLES
# ==================================

# Application
NODE_ENV=development
APP_NAME=FinTrack Pro
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# Backend API
BACKEND_PORT=3001
BACKEND_HOST=0.0.0.0

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=fintrack
DB_PASSWORD=fintrack_secure_pass_2026
DB_DATABASE=fintrack_pro
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_ACCESS_SECRET=your-jwt-access-secret-change-in-production-min-64-chars
JWT_REFRESH_SECRET=your-jwt-refresh-secret-change-in-production-min-64-chars
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# 2FA (TOTP)
TWO_FA_APP_NAME=FinTrack Pro

# Encryption (AES-256-GCM for financial data)
ENCRYPTION_KEY=your-32-byte-encryption-key-change-in-production-exactly-32-chars!!
ENCRYPTION_ALGORITHM=aes-256-gcm

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT_AUTH=100
THROTTLE_LIMIT_API=300

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Cookie
COOKIE_SECRET=your-cookie-secret-change-in-production-min-32-chars

# Email (для уведомлений - опционально)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@fintrack.pro
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=FinTrack Pro <noreply@fintrack.pro>

# Currency API (для авто-конвертации)
CURRENCY_API_KEY=your-api-key-from-exchangerate-api-com
CURRENCY_API_URL=https://v6.exchangerate-api.com/v6

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production-min-64-chars

# Monitoring (опционально)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# PWA
NEXT_PUBLIC_PWA_ENABLED=true
NEXT_PUBLIC_VAPID_PUBLIC_KEY=

# Analytics (опционально)
NEXT_PUBLIC_GA_ID=
