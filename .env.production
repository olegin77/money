# ==================================
# FINTRACK PRO - PRODUCTION ENVIRONMENT
# ==================================
# ⚠️ NEVER commit this file to git!
# ⚠️ Generate strong secrets for production!

# Application
NODE_ENV=production
APP_NAME=FinTrack Pro
APP_URL=https://fintrack.pro
API_URL=https://api.fintrack.pro

# Backend API
BACKEND_PORT=3001
BACKEND_HOST=0.0.0.0

# Frontend
NEXT_PUBLIC_API_URL=https://api.fintrack.pro/api/v1
NEXT_PUBLIC_WS_URL=wss://api.fintrack.pro

# Database (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=fintrack_prod
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DB_DATABASE=fintrack_prod
DB_SYNCHRONIZE=false
DB_LOGGING=false

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
REDIS_DB=0

# JWT Authentication (Generate with: openssl rand -base64 64)
JWT_ACCESS_SECRET=CHANGE_ME_64_CHAR_SECRET_HERE
JWT_REFRESH_SECRET=CHANGE_ME_64_CHAR_SECRET_HERE
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# 2FA (TOTP)
TWO_FA_APP_NAME=FinTrack Pro

# Encryption (Generate with: openssl rand -base64 32)
ENCRYPTION_KEY=CHANGE_ME_32_CHAR_KEY_HERE
ENCRYPTION_ALGORITHM=aes-256-gcm

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT_AUTH=100
THROTTLE_LIMIT_API=300

# CORS
CORS_ORIGIN=https://fintrack.pro,https://www.fintrack.pro
CORS_CREDENTIALS=true

# Cookie
COOKIE_SECRET=CHANGE_ME_32_CHAR_SECRET_HERE

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=CHANGE_ME_64_CHAR_SECRET_HERE

# PWA
NEXT_PUBLIC_PWA_ENABLED=true
